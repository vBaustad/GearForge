# Convex
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud

# Blizzard OAuth - Public (for redirect)
NEXT_PUBLIC_BLIZZARD_CLIENT_ID=your_client_id
NEXT_PUBLIC_BLIZZARD_REDIRECT_URI=http://localhost:3000/auth/callback

# Blizzard OAuth - Private (server-side only, NOT exposed to client)
BLIZZARD_CLIENT_ID=your_client_id
BLIZZARD_CLIENT_SECRET=your_client_secret

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ==============================================
# Social Connections OAuth (optional)
# ==============================================
# These enable verified social account connections.
# Users can connect their streaming accounts to show verified badges.

# Twitch OAuth
# Create app at: https://dev.twitch.tv/console/apps
NEXT_PUBLIC_TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret

# YouTube/Google OAuth
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Enable YouTube Data API v3
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Kick OAuth
# Create app at: https://kick.com/developer
NEXT_PUBLIC_KICK_CLIENT_ID=your_kick_client_id
KICK_CLIENT_SECRET=your_kick_client_secret
